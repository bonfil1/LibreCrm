<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    

   <display-name>Aplicacion de SW de Venta de Libros en NB</display-name>
  <servlet>
    <servlet-name>SvLibros</servlet-name>
    <servlet-class>SvLibros</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SvLibros</servlet-name>
    <url-pattern>/SvLibros</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <res-ref-name>jdbc/bd_libros</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
