<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Aplicacion para llevar agenda en NB</display-name>

    <servlet>
        <servlet-name>SvAgenda</servlet-name>
        <servlet-class>SvAgenda</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SvAgenda</servlet-name>
        <url-pattern>/SvAgenda</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>jdbc/timesheet</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/SvAgenda</welcome-file>
    </welcome-file-list>

</web-app>
